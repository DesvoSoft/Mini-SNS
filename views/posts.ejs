<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Posts - Mini SNS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google font component class:font-body-gamer -->
    <%- include('components/_gfont.ejs') %>
    <%- include('components/_ui-helpers') %>
    <link rel="stylesheet" href="./css/bg.css" />
    <!-- <link rel="stylesheet" href="./css/posts.css" /> -->
  </head>
  <body class="app-body">
    <%- include('components/_header', { username: username }) %>
    <main class="page-shell">
      <h1 class="page-title">Community Posts</h1>

      <div class="action-row">
        <a href="/" class="btn btn-secondary">
          ← Back to Home
        </a>
        <a href="/write" class="btn btn-primary">
          Write New Post
        </a>
      </div>

      <%- include('components/_categories', { categories: categories }) %>

      <div class="space-y-6">
        <% if (posts && posts.length > 0) { %> <% posts.forEach(function(post) {
        %> <%- include("feed", {post: post}) %> <% }); %> <% } else { %>
        <p class="text-center text-xl text-gray-400 pt-10">
          No hay posts disponibles aún
        </p>
        <% } %>
      </div>
    </main>

    <%- include('components/_footer') %>
  </body>
</html>
